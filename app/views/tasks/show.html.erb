<div class = "table">
    <div class = "table_header">
        <h3 class = "table_title">スケジュール詳細</h3>
        <p><%= link_to "編集", [:edit, @task] %></p>
    </div>

    <table>
        <tr>
            <th>タイトル</th>
            <td><%= @task.title %></td>
        </tr>
        <tr>
            <th>開始日</th>
            <td><%= @task.start_date %></td>
        </tr>
        <tr>
            <th>終了日</th>
            <td><%= @task.end_date %></td>
        </tr>
        <tr>
            <th>終日</th>
            <td>
                <%= if @task.is_all_day then p "⚪︎" end %>
            </td>
        </tr>
        <tr>
            <th>メモ</th>
            <td><%= @task.memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= link_to "一覧に戻る", :tasks %></li>
        </ul>
    </div>
</div>